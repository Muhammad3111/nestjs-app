# ========================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and adjust values for your local setup

# Application
NODE_ENV=development
PORT=3001

# Database (Local PostgreSQL)
MONEYCHANGE_DB_URL=postgresql://postgres:postgres@localhost:5432/moneychange_dev

# For Docker Compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=moneychange_dev

# JWT Secret (Use a strong secret even in development)
MONEYCHANGE_JWT_SECRET=dev-secret-key-change-in-production-use-crypto-random-bytes

# Registration Secret Key
REGISTRATION_SECRET_DEFAULT=dev-registration-secret

# CORS (comma-separated origins - add your frontend dev URLs)
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:5173,http://localhost:3000
